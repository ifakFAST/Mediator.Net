            <HistoryDBs>
                <HistoryDB name="IO" type="SQLite" prioritizeReadRequests="true">
                    <ConnectionString>Filename=DB_Module_TagMetaData.db</ConnectionString>
                    <Settings>
                        <string>page_size=4096</string>
                        <string>cache_size=5000</string>
                    </Settings>
